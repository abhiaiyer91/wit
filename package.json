{
  "name": "wit",
  "version": "2.0.0",
  "description": "A modern Git implementation in TypeScript with AI-powered features - SHA-256, built-in UI, undo support, AI commit messages, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wit": "./dist/cli.js"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "npx tsx watch src/cli.ts serve",
    "dev:cli": "npx tsx src/cli.ts",
    "dev:web": "cd apps/web && npm run dev",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run tests/integration",
    "test:unit": "vitest run src",
    "prepublishOnly": "npm run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "npx tsx src/db/seed.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:db": "docker compose up db -d",
    "docker:build": "docker compose build",
    "serve": "node dist/cli.js serve",
    "wit": "npx tsx src/cli.ts"
  },
  "keywords": [
    "git",
    "version-control",
    "typescript",
    "vcs",
    "sha256",
    "tui",
    "cli",
    "ai",
    "llm",
    "mastra",
    "commit-message",
    "code-review",
    "semantic-search",
    "embeddings",
    "rag",
    "wit"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@computesdk/codesandbox": "^1.5.6",
    "@computesdk/daytona": "^1.6.6",
    "@computesdk/e2b": "^1.7.6",
    "@computesdk/modal": "^1.8.1",
    "@daytonaio/sdk": "^0.128.1",
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.1.1",
    "@hono/trpc-server": "^0.4.1",
    "@hono/zod-validator": "^0.7.6",
    "@mastra/core": "^1.0.0-beta.17",
    "@mastra/libsql": "^1.0.0-beta.10",
    "@mastra/memory": "^1.0.0-beta.9",
    "@mastra/pg": "^1.0.0-beta.10",
    "@opentelemetry/api": "^1.9.0",
    "@opentui/core": "^0.1.65",
    "@opentui/solid": "^0.1.65",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@vercel/sandbox": "^1.1.2",
    "autumn-js": "^0.1.63",
    "better-auth": "^1.4.9",
    "computesdk": "^1.10.0",
    "drizzle-orm": "^0.45.1",
    "e2b": "^2.9.0",
    "hono": "^4.11.3",
    "lru-cache": "^11.2.4",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "redis": "^5.10.0",
    "solid-js": "^1.9.9",
    "stripe": "^20.1.0",
    "superjson": "^2.2.6",
    "uuid": "^13.0.0",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=22.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abhiaiyer91/wit"
  },
  "optionalDependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "ai": "^6.0.3"
  }
}
